{
  "appId": "com.mdrcloud.terminal",
  "productName": "MDRCloud Terminal",
  "publish": null,
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*",
    "!**/node_modules/**/*",
    "!src/**/*",
    "!*.md",
    "!tsconfig*.json",
    "!vite.config.ts",
    "!eslint.config.js"
  ],
  "asarUnpack": [
    "node_modules/node-fetch/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "npmRebuild": true,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      {
        "target": "msi",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "icon": "public/icon.ico",
    "executableName": "MDRCloud-Terminal"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "mdrcloud-terminal_windows_${arch}_nsis.${ext}",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "MDRCloud Terminal",
    "uninstallDisplayName": "MDRCloud Terminal"
  },
  "msi": {
    "artifactName": "mdrcloud-terminal_windows_${arch}_msi.${ext}"
  },
  "linux": {
    "artifactName": "mdrcloud-terminal_linux_${arch}_portable.${ext}",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64",
          "armv7l"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64",
          "arm64",
          "armv7l"
        ]
      },
      {
        "target": "tar.gz",
        "arch": [
          "x64",
          "arm64",
          "armv7l"
        ]
      }
    ],
    "icon": "public/icon.png",
    "category": "Development",
    "executableName": "mdrcloud-terminal",
    "maintainer": "MDRCloud <support@mdrcloud.com>",
    "desktop": {
      "entry": {
        "Name": "MDRCloud Terminal",
        "Comment": "MDRCloud Terminal - Web-based server management platform",
        "Keywords": "terminal;ssh;server;management;mdrcloud;",
        "StartupWMClass": "mdrcloud-terminal"
      }
    }
  },
  "appImage": {
    "artifactName": "mdrcloud-terminal_linux_${arch}_appimage.${ext}"
  },
  "deb": {
    "artifactName": "mdrcloud-terminal_linux_${arch}_deb.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "mas",
        "arch": "universal"
      },
      {
        "target": "dmg",
        "arch": [
          "universal",
          "x64",
          "arm64"
        ]
      }
    ],
    "icon": "public/icon.icns",
    "category": "public.app-category.developer-tools",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.inherit.plist",
    "type": "distribution",
    "minimumSystemVersion": "10.15"
  },
  "dmg": {
    "artifactName": "mdrcloud-terminal_macos_${arch}_dmg.${ext}",
    "sign": true
  },
  "afterSign": "build/notarize.cjs",
  "mas": {
    "provisioningProfile": "build/MDRCloud_Terminal_Mac_App_Store.provisionprofile",
    "entitlements": "build/entitlements.mas.plist",
    "entitlementsInherit": "build/entitlements.mas.inherit.plist",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "asarUnpack": [
      "**/*.node"
    ],
    "type": "distribution",
    "category": "public.app-category.developer-tools",
    "artifactName": "mdrcloud-terminal_macos_${arch}_mas.${ext}",
    "extendInfo": {
      "ITSAppUsesNonExemptEncryption": false,
      "NSAppleEventsUsageDescription": "MDRCloud Terminal needs access to control other applications for terminal operations."
    }
  },
  "generateUpdatesFilesForAllChannels": true
}